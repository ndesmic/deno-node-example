{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [

		{
			"name": "Http Listen Deno with Node",
			"program": "${workspaceFolder}/src/http-listen/http-listen-deno.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"runtimeArgs": [
				"--trace-warnings"
			],
			"env": {
				"PORT": "8081"
			},
			"type": "pwa-node"
		},
		{
			"request": "launch",
			"name": "Http Listen Deno",
			"type": "pwa-node",
			"program": "${workspaceFolder}/src/http-listen/http-listen-deno.js",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "C:\\Users\\omnid\\.deno\\bin\\deno.EXE",
			"runtimeArgs": [
				"run",
				"--inspect-brk",
				"--allow-all"
			],
			"env": {
				"PORT": "8081"
			},
			"attachSimplePort": 9229
		},
		{
			"request": "launch",
			"name": "Http Listen Node with Deno",
			"type": "pwa-node",
			"program": "${workspaceFolder}/src/http-listen/http-listen-node.js",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "C:\\Users\\omnid\\.deno\\bin\\deno.EXE",
			"runtimeArgs": [
				"run",
				"--inspect-brk",
				"--import-map=src/http-listen/import-map-node.json",
				"--allow-all"
			],
			"env": {
				"PORT": "8081"
			},
			"attachSimplePort": 9229
		}
	]
}